@page "/"
@inject Microsoft.AspNetCore.Blazor.Services.IUriHelper UriHelper
@inherits EmployeeDataModel

<style>
    body {
        background-image: url(/css/images/bg-image.jpg);
        font-family: Calibri;
    }

    .container {
        color: white;
    }



</style>

    


<div class="container">
    <h1><b>Employee Management System</b></h1>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" bind="UserName" name="username" placeholder="Username" class="form-control" size="10" />
    </div>
    <div class="form-group">
        <label for="password" name="pwd">Password</label>
        <input type="password" bind="Password" name="password" placeholder="Password" class="form-control" size="10" />
    </div>

    <button class="btn btn-primary" onclick="@Navigate">Log In</button>
</div>


@functions {
    public string UserName { get; set; }
    public string Password { get; set; }


    public void Navigate()
    {

        if (UserName == "admin" && Password == "admin")
        {
            UriHelper.NavigateTo("/fetchemployee");
        }
        else

        {
            foreach(var emp in empList)
            {
                if(emp.Username== UserName &&  emp.Password == Password)
                {
                    UriHelper.NavigateTo("/product");
                }
                else
                {
                    continue;
                }
            }
        }



    }
}


